</head>
<body class="bg-SAEON" id="Document">
    <div id="Page" class="container-fluid bg-white text-dark rounded">
        <header id="Header">
            <div class="row">
                <div class="col-md text-center">
                    <img class="Logo img-fluid" src="~/Images/Banner.jpg" alt="SAEON Banner" title="© SAEON" />
                </div>
            </div>
            <!-- Navbar -->
            <nav class="navbar navbar-expand-sm navbar-dark bg-SAEON rounded">
                <!-- Container wrapper -->
                <div class="container-fluid">
                    <!-- Toggle button -->
                    <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-bars"></i>
                    </button>
                    <!-- Collapsible wrapper -->
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownQuery" role="button" data-mdb-toggle="dropdown" aria-expanded="false">Query</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownQuery">
                                    <li>@Html.ActionLink("Data", "Index", "DataWizard", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Datasets", "Datasets", "Query", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Sensors", "Sensors", "Query", null, new { @class = "dropdown-item" })</li>
                                    @*@Html.ActionLink("Coverage", "Index", "Coverage", null, new { @class = "dropdown-item" })*@
                                    @*@Html.ActionLink("Spacial Coverage", "Index", "SpacialCoverage", null, new { @class = "dropdown-item" })*@
                                    @*@Html.ActionLink("Temporal Coverage", "Index", "TemporalCoverage", null, new { @class = "dropdown-item" })*@
                                </ul>
                            </li>
                            <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                            @*<li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>*@
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            @Html.Partial("_AdminPartial")
                            @Html.Partial("_DataSourcesPartial")
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </nav>
            <h1>
                @if (ViewBag.Title == "Observations Database" || string.IsNullOrWhiteSpace(ViewBag.Title))
                {
                    <text>Observations Database</text>
                }
                else
                {
                    <text>Observations Database</text> @:&ndash; @ViewBag.Title
                    if (!string.IsNullOrWhiteSpace(ViewBag.Description))
                    {
                        <small>@Html.Raw(ViewBag.Description)</small>
                    }
                }
            </h1>
        </header>
        <div id="Body">
            @RenderBody()
        </div>
        <footer id="Footer">
            <div class="row align-items-center">
                <div class="col-4">
                    <span class="d-none d-sm-block d-md-block">
                        <br />
                        &copy; @DateTime.Now.Year - South African Environmental Observation Network (SAEON)<br />
                    </span>
                    <a rel="license" href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank">
                        <img alt="Creative Commons License" class="footer-image" src="https://i.creativecommons.org/l/by-sa/4.0/88x31.png" />
                    </a>
                    <br />
                    <div class="d-none d-sm-block d-md-block" style="clear: both">
                        Observations Database is licensed under a <a rel="license" target="_blank" href="https://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0 International License</a><br />
                        @Html.ActionLink("How to cite", "HowToCite", "Home")
                    </div>
                </div>
                <div class="col-4 text-center footer-center">
                    @Html.ActionLink("Disclaimer", "Disclaimer", "Home")<br />
                    @Html.ActionLink("Conditions of Use", "ConditionsOfUse", "Home")<br />
                    @Html.ActionLink("Privacy", "Privacy", "Home")
                </div>
                <div class="col-4">
                    <div class="d-flex justify-content-end">
                        <a href="https://www.dst.gov.za/" target="_blank">
                            <img class="footer-image dsi-logo" src="~/Images/DSI logo.jpg" alt="Department of Science and Innovation logo" title="Department of Science and Innovation" />
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script type="text/javascript" src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="/node_modules/mdb-ui-kit/js/mdb.min.js"></script>
    @Scripts.Render("~/Scripts/jsrender.min.js")
    @Scripts.Render("~/Scripts/ej/web/ej.web.all.min.js")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/jqueryval")*@
    @RenderSection("Scripts", required: false)
    @Html.EJ().ScriptManager()
</body>
</html>
