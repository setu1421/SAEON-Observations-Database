@model SAEON.Observations.Core.UserDownload
@{
    ViewBag.Title = "User Download";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Date)
    @Html.HiddenFor(model => model.Input)
    @Html.HiddenFor(model => model.DigitalObjectIdentifierId)
    @Html.HiddenFor(model => model.DigitalObjectIdentifier)
    @Html.HiddenFor(model => model.DownloadUrl)
    @Html.HiddenFor(model => model.IsDeleted)
    @Html.HiddenFor(model => model.RequeryUrl)
    @Html.HiddenFor(model => model.ZipCheckSum)
    @Html.HiddenFor(model => model.ZipFullName)
    @Html.HiddenFor(model => model.ZipUrl)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.AddedAt)
    @Html.HiddenFor(model => model.AddedBy)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "font-weight-bold" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "font-weight-bold" })
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.DigitalObjectIdentifier.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DigitalObjectIdentifier.Title)
        </dd>
        <dt>
            @Html.LabelFor(model => model.DigitalObjectIdentifier.CitationText)
        </dt>
        <dd>
            @Html.Raw(Model.DigitalObjectIdentifier.CitationHtml)
        </dd>
        <dt>
            @Html.LabelFor(model => model.DigitalObjectIdentifier.DOI)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DigitalObjectIdentifier.DOI)
        </dd>
        <dt>
            @Html.LabelFor(model => model.DigitalObjectIdentifier.MetadataUrl)
        </dt>
        <dd>
            <a href="@Model.DigitalObjectIdentifier.MetadataUrl" target="_blank">@Html.DisplayFor(model => model.DigitalObjectIdentifier.MetadataUrl)</a>
        </dd>
        <dt>
            @Html.LabelFor(model => model.ZipUrl)
        </dt>
        <dd>
            <a href="@Model.ZipUrl">@Html.DisplayFor(model => model.ZipUrl)</a>
        </dd>
        <dt>
            @Html.LabelFor(model => model.ZipCheckSum)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ZipCheckSum)
        </dd>
    </dl>
    <button type="submit" class="btn btn-primary">Save</button>
}
<div>
    <br />
    @Html.ActionLink("Back to List", "Index")
</div>
